<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NewsDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding">

        <TextView
            android:id="@+id/activity_newsdetail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ItemList.Title" />

        <ImageView
            android:id="@+id/activity_newsdetail_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp" />

        <TextView
            android:id="@+id/activity_newsdetail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:gravity="center" >

            <Button
                android:id="@+id/activity_newsdetail_btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MenuList.Selected"
                android:layout_marginEnd="20sp" />

            <Button
                android:id="@+id/activity_newsdetail_btn_readmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                style="@style/MenuList.Selected"
                android:text="@string/read_more" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
